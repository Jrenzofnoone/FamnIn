<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cal_fragment_advance"
    android:background="@color/main">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_two"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Harvest Weight (lbs)" />

        <EditText
            android:id="@+id/etlbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_two"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Weight Per unit (lbs/unit)" />

        <EditText
            android:id="@+id/etlbsunit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_two"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/textVi4ew7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Area (acres)" />

        <EditText
            android:id="@+id/etacres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_two"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/text3View7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efficiency Factor (%)" />

        <EditText
            android:id="@+id/etpercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_two"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/textVdfdsiew7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adjusted Harvest Yield (units per area) (units per acre)" />

        <EditText
            android:id="@+id/ettotalresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:textColor="@color/white"  />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginRight="50dp"
                android:id="@+id/calculate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="1000dp"
                android:autoSizeMinTextSize="1dp"
                android:background="@drawable/roundedcorners"
                android:backgroundTint="@color/background"
                android:text="Calculate"
                android:textColor="@color/background_two"
                android:textColorHint="#FFFFFF" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="50dp"
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="1000dp"
                android:autoSizeMinTextSize="1dp"
                android:background="@drawable/roundedcorners"
                android:backgroundTint="@color/background"
                android:text="Reset"
                android:textColor="@color/background_two"
                android:textColorHint="#FFFFFF" />
        </LinearLayout>






    </LinearLayout>

</FrameLayout>