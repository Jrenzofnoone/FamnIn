<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cal_fragment_basic"
    android:background="@color/main">

    <LinearLayout

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="@drawable/backgrountwo">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:text="Total Harvest Weight (lbs)"
            android:textColor="@color/background_two"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_ibs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/textVdfsdiew7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"


            android:text="Total Weight Per unit (lbs/unit)"
            android:textColor="@color/background_two"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_ibs_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/textsdfsView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:text="Total Area (acres)"
            android:textColor="@color/background_two"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_areas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/sdfasdtextView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:text="Harvest Yield (units per area) (units per acre)"
            android:textColor="@color/background_two"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_total_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calculate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:autoSizeMaxTextSize="1000dp"
                android:autoSizeMinTextSize="1dp"
                android:background="@drawable/roundedcorners"
                android:backgroundTint="@color/background_two"
                android:text="Calculate"
                android:textColor="@color/background"
                android:textColorHint="#FFFFFF" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:autoSizeMaxTextSize="1000dp"
                android:autoSizeMinTextSize="1dp"
                android:background="@drawable/roundedcorners"
                android:backgroundTint="@color/background_two"
                android:text="Reset"
                android:textColor="@color/background"
                android:textColorHint="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>