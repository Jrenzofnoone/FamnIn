<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#adbc9f"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/backgrountwo"
            android:backgroundTint="#49B3E5">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Income"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_income_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FEFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/backgrountwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#FE4444">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:textAlignment="center"
                android:textColor="#F9FCFD"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_expenses_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FEFEFE"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="382dp"
        android:layout_height="665dp"
        android:layout_above="@+id/linearLayout7"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:background="@drawable/backgrountwo"
        android:elevation="0dp"> <!-- Ensure no elevation here -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_show_expenses_income"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:elevation="0dp"/> <!-- Ensure no elevation here -->
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <TextView
            android:id="@+id/addIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#49B4E6"
            android:gravity="center"
            android:padding="15dp"
            android:text="Add Income"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/addExpensive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:padding="15dp"
            android:text="Add Expense"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>